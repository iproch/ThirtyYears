{%- assign blog = blogs[section.settings.blog] -%}

<div
  class="homepage-sections-wrapper homepage-sections-wrapper--{{ section.settings.colors }}"
  data-wetheme-section-type="blog--blog-posts" data-wetheme-section-id="{{ section.id }}"
>
  <div class="wrapper show-on-scroll">

    <div class="homepage-indiv-section-wrapper">
      <div class="sitewide--title-wrapper">
        {% if section.settings.title != '' %}
          <h2 class="homepage-sections--title">{{ section.settings.title | escape }}</h2>
        {% endif %}
      </div>

      {% if section.settings.richtext != '' %}
        <div class="grid">
          <div class="grid__item large--one-half push--large--one-quarter">
            <div class="homepage-sections--description">{{ section.settings.richtext }}</div>
          </div>
        </div>
      {% endif %}

      <div class="grid medium--hide small--hide">
        {% case section.settings.post_limit %}
          {% when 1 %}
            {% assign size = "large--one-half push--large--one-quarter" %}
          {% when 2 %}
            {% assign size = "large--one-half" %}
          {% when 3 %}
            {% assign size = "large--one-third" %}
          {% when 4 %}
            {% assign size = "large--one-quarter" %}
        {% endcase %}

        {% unless blog == empty %}
          {% for article in blog.articles limit: section.settings.post_limit %}
            <div class="grid__item {{ size }}">
              {% if article.image %}
                <div class="article-image-wrap">
                  <div class="article-image">
                    <a href="{{ article.url }}" class="{% if settings.ken_burns_enabled %} kb-enabled{% endif %}">
                      {% render 'responsive-image' with article.image, alt: article.title, crop: 'center', force_height: 400 %}{% comment %}FIXME: add section height option{% endcomment %}
                    </a>
                  </div>
                </div>
              {% endif %}

              {% if section.settings.blog_show_date %}
                <time class="homepage-blog--date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | time_tag: format: 'month_day_year' }}</time>
              {% endif %}

              <h3 class="homepage-blog--title"><a href="{{ article.url }}">{{ article.title }}</a></h3>

              <div class="rte">
                {% if article.excerpt.size > 0 %}
                  {{ article.excerpt }}
                {% else %}
                  <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        {% else %}
          <div class="row">
            {% for i in (1..section.settings.post_limit) %}
              <div class="grid__item {{ size }}">
                <div class="article-image">
                  {{ 'image' | placeholder_svg_tag: 'icon icon--placeholder' }}
                </div>

                <div class="blog-title-wrapper{% if article.image %} article-image-in-header{% endif %}">
                  {% if section.settings.blog_show_date %}
                    <time class="homepage-blog--date" datetime="{{ "2016-12-25" | date: '%Y-%m-%d' }}">{{ "2016-12-25" | time_tag: format: "month_day_year" }}</time>
                  {% endif %}
                  <div class="blog-title--divider"></div>
                  <h3 class="homepage-blog--title">{{ 'general.onboarding.blog_title' | t }}</h3>
                </div>

                <div class="rte home-blog-excerpt">
                  {{ 'general.onboarding.blog_excerpt' | t }}
                </div>
              </div>
            {% endfor %}
          </div>
        {% endunless %}
      </div>

      <div class="homepage-blog-mobile swiper-container large--hide">
        <div class="swiper-wrapper">
          {% unless blog == empty %}
            {% for article in blog.articles limit: section.settings.post_limit %}
              <div class="swiper-slide">
                <div class="grid__item">
                  {% if article.image %}
                    <div class="article-image">
                      <a href="{{ article.url }}">
                        {% render 'responsive-image' with article.image, alt: article.title %}
                      </a>
                    </div>
                  {% endif %}

                  <time class="homepage-blog--date" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>
                  <h3 class="homepage-blog--title"><a href="{{ article.url }}">{{ article.title }}</a></h3>

                  <div class="rte">
                    {% if article.excerpt.size > 0 %}
                      {{ article.excerpt }}
                    {% else %}
                      <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          {% else %}
            {% for i in (1..section.settings.post_limit) %}
              <div class="swiper-slide">
                <div class="grid__item">

                  <div class="blog-title-wrapper{% if article.image %} article-image-in-header{% endif %}">
                    <time class="homepage-blog--date" datetime="{{ "2016-12-25" | date: '%Y-%m-%d' }}">{{ "2016-12-25" | time_tag: format: "month_day_year" }}</time>
                    <div class="blog-title--divider"></div>
                    <h3 class="homepage-blog--title">{{ 'general.onboarding.blog_title' | t }}</h3>
                  </div>

                  <div class="rte home-blog-excerpt">
                    {{ 'general.onboarding.blog_excerpt' | t }}
                  </div>
                </div>
             </div>
            {% endfor %}
          {% endunless %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</div>


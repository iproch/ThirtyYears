  "label": "Image"
},
{
  "type": "url",
  "id": "product_link",
  "label": "Product link"
},
{
  "type": "text",
  "id": "product_txt",
  "label": "Product title"
},
{
  "type": "text",
  "id": "product_txt2",
  "label": "Product color"
},
{
  "type": "text",
  "id": "product_txt3",
  "label": "Price"
},
{
  "type": "text",
  "id": "product_txt-alt",
  "label": "Right Product title"
},
{
  "type": "text",
  "id": "product_txt2-alt",
  "label": "Right Product color"
},
{
  "type": "text",
  "id": "product_txt3-alt",
  "label": "Right Price"
}

    ],
    "presets": [
        {
            "name": {
                "en": "Featured product - single",

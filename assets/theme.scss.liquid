// Standard transitions ======================================================*/

@mixin standard-transform {
  -webkit-transition: all 0.15s ease-in-out;
  -moz-transition: all 0.15s ease-in-out;
  -o-transition: all 0.15s ease-in-out;
  transition: all 0.15s ease-in-out;
}

@mixin property-transform($prop) {
  -webkit-transition: $prop 0.15s ease-in-out;
  -moz-transition: $prop 0.15s ease-in-out;
  -o-transition: $prop 0.15s ease-in-out;
  transition: $prop 0.15s ease-in-out;
}


// Ken burns =================================================================*/

// Masthead 'Ken Burns effect' on homepage
@mixin ken-burns-out {
  @media only screen and (min-width: 768px) {
    -webkit-transform: translate3d(.25rem,.12rem,.25rem) scale(1.06);
    -ms-transform: translate3d(.25rem,.12rem,.25rem) scale(1.06);
    -moz-transform: translate3d(.25rem,.12rem,.25rem) scale(1.06);
    -o-transform: translate3d(.25rem,.12rem,.25rem) scale(1.06);
    transform: translate3d(.25rem,.12rem,.25rem) scale(1.06);
    transition: 2s transform;
  }
}

@mixin ken-burns-in {
  @media only screen and (min-width: 768px) {
    -webkit-transform: translate3d(0,0,0) scale(1);
    -ms-transform: translate3d(0,0,0) scale(1);
    -moz-transform: translate3d(0,0,0) scale(1);
    -o-transform: translate3d(0,0,0) scale(1);
    transform: translate3d(0,0,0) scale(1);
  }
}


.kb-enabled {
  overflow: hidden;

  > * {
    @include ken-burns-out;
  }
  &.in-viewport > * {
    @include ken-burns-in;
  }
  &.no-anim > * {
    transition: none!important;
  }
}

// Reduced motion for accessibility ==========================================*/

// See: https://a11y-101.com/development/reduced-motion
@media screen and (prefers-reduced-motion: reduce) {
  .kb-enabled {
    transform: none !important;
    transition: none !important;

    &.in-viewport {
      transform: none !important;
      transition: none !important;
    }
  }

  .flow-homepage .image-with-text-wrapper .kb-enabled {
    div:not(.parallax) .img,
    .parallax,
    .in-viewport {
      transform: none !important;
      transition: none !important;
    }
  }
}



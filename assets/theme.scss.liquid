  position: absolute;
  opacity: 0;
  left: 100%;
  top: 0;
  margin: 0;
  z-index: $zindexNavDropdowns + 1;
  background: $bodyColor;

  .nav-hover .nav-hover & {
    visibility: visible;
    transform: translateY(0);
    opacity: 1;
    transition: all ease 300ms;
    min-width: 150px;
  }
}

.nav {
  .ul {

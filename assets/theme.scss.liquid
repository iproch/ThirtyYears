@mixin font-size($size, $heading: false) {
  $factor: 1;
  @if $heading {
    $factor: 0.8;
  }

  font-size: $size;
  $fontSize: $size * $factor;
  @media (max-width: 769px) {
    font-size: calc(#{$fontSize} - .4vw);
  }
}

@mixin text-size-range($sizes) {
  @each $size in $sizes {
    .text-size-#{$size} {
